<h1>Listing Orders</h1>
<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.address %></td>
        <td><%= order.city %></td>
        <td><%= order.state %></td>
        <td><%= link_to 'Show', listing_order_path(@listing, order) %></td>
        <td><%= link_to 'Edit',  edit_listing_order_path(@listing, order) %></td>
        <td><%= link_to 'Destroy', listing_order_path(@listing, order), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_listing_order_path(@listing) %>
