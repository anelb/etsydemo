<div class="center">
  <div class="row">
    <% @listings.each do |listing| %> 
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to (image_tag listing.image.url), listing_path(listing) %>
          <div class="caption">
            <h3><%= link_to listing.name, listing_path(listing)  %></h3>
            <p><%= number_to_currency(listing.price) %></p>
            <p><strong>Sold by:</strong> <%= listing.user.name %></p>
            <% if current_user == listing.user %>
              <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %>
              <%= link_to 'Destroy', listing, method: :delete, 
                           data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
            <% end %>               
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>