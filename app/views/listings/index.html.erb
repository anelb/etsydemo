<div class="jumbotron">
  <h1>Handcrafted items from around the world</h1>
  <h2>Discover one-of-kind items</h2>
</div>

<div class="center">
  <div class="row">
    <% @listings.each do |listing| %> 
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to (image_tag listing.image.url), listing_path(listing) %>
          <div class="caption">
            <h3><%= link_to listing.name, listing_path(listing)  %></h3>
            <p><%= number_to_currency(listing.price) %></p>
            <p><strong>Sold by:</strong> <%= listing.user.name %></p>              
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>