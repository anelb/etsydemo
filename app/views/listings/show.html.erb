<div class="row">
	<div class='col-md-6 thumbnail'>
		<%= image_tag @listing.image.url %>
	</div>
	<div class='col-md-6'>
		  <h3><%= @listing.name %></h3>
		  <p><strong>Price:</strong> <%= number_to_currency(@listing.price) %></p>
		  <p><strong>Description:</strong> <%= @listing.description %></p>
		  <%= link_to 'Buy it now', new_listing_order_path(@listing), class: 'btn btn-default' %>
	</div>
</div>
<% if current_user == @listing.user %>
	<%= link_to 'Edit', edit_listing_path(@listing), class: "btn btn-link" %> |
	<%= link_to 'Destroy', listing_path(@listing), method: :delete, data: { confirm: "Are you 											   sure?" }, class: "btn btn-link" %>
<% end %>	
<%= link_to 'Back to previous page', root_path, class: "btn btn-link" %>
